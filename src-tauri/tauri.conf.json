{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "CraftIDE",
  "version": "0.1.0",
  "identifier": "org.dokko.craft_ide",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  
  "app": {
    "windows": [
      {
        "title": "CraftIDE",
        "width": 800,
        "height": 600,
        "minWidth": 100,
        "minHeight": 80,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
